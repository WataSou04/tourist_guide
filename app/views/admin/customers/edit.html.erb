<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0"><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集</h5>
      <div class="form-body p-4">
        <% if @customer.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @customer.errors.count %>件のエラーが発生しました。
            </h6>
            <%= @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
  
        <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :last_name, class: "form-control" %><%= f.text_field :first_name, class: "form-control" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :last_name_kana, class: "form-control" %><%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.radio_button :is_active, :true, id:"active" %><label for="active">有効</label><%= f.radio_button :is_active, :false, id:"withdrawal" %><label for="withdrawal">退会</label>
          </div>
          <hr>
          <%= f.submit "変更を保存", class: 'btn btn-lg btn-block btn-info mt-4' %>
        <% end %>
      </div>
    </div>
  </div>
</div>