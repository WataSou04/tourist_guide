<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h1>会員一覧</h1>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead class="table-info">
        <tr><th>会員ID</th><th>氏名</th><th>メールアドレス</th><th>ステータス</th></tr>
      </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <tr><td><%= customer.id %></td><td><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer.id) %></td><td><%= customer.email %></td><td><%= customer.is_active ? "有効" : "退会" %></td></tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>