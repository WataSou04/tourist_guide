<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">観光地登録</h5>
      <div class="form-body p-4">
        <% if @tourist_spot.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @tourist_spot.errors.count %>件のエラーが発生しました。
            </h6>
            <%= @tourist_spot.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
  
        <%= form_with model: @tourist_spot, url: admin_tourist_spot_path, method: :patch do |f| %>
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :name, class: "form-control", placeholder: "観光地名" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :address, class: "form-control", placeholder: "観光地場所" %>
          </div>
          <%= f.radio_button :season, :spring, id:"spring" %><label for="spring">春</label>
          <%= f.radio_button :season, :summer, id:"summer" %><label for="summer">夏</label>
          <%= f.radio_button :season, :autumn, id:"autumn" %><label for="autumn">秋</label>
          <%= f.radio_button :season, :winter, id:"winter" %><label for="winter">冬</label>
          <%= f.text_area :explanation, class: "form-control", rows: "3", placeholder: "観光地情報" %>
          <hr>
          <%= f.submit "変更を保存", class: 'btn btn-lg btn-block btn-info mt-4' %>
          <%= link_to "削除する", admin_tourist_spot_path, method: :delete, class: 'btn btn-lg btn-block btn-danger mt-4' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag "jpostal", 'data-turbolinks-track': 'reload' %>