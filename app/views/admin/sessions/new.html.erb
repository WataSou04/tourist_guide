<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">管理者ログイン</h5>
      <div class="form-body p-4">
        <% if @admin.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @admin.errors.count %>件のエラーが発生しました。
            </h6>
            <%= @admin.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
  
        <%= form_with model: @admin, url: admin_session_path do |f| %>
          <div class="input-group mb-3 mt-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: 'mx-auto form-control' %>
          </div>
          <div class="input-group mb-3 mt-4">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: 'mx-auto form-control' %>
          </div>
          <hr>
          <%= f.submit "ログイン", class: 'btn btn-lg btn-block btn-info mt-4' %>
        <% end %>
      </div>
    </div>
  </div>
</div>