<div class="container">
  <div class="row">
    <h5>観光地詳細</h5>
  </div>
  <div class="row">
    <%= image_tag @tourist_spot.image, size: "350x250" %>
    <%= @tourist_spot.name %>
    <%= @tourist_spot.explanation %>
    <%= @tourist_spot.address %>
    <%= @tourist_spot.season_i18n %>
  </div>
  <dvi class="row">
    <%= link_to "レビューを書く", make_path(@tourist_spot.id) %>
  </dvi>
  <div class="row">
    <table class="table">
      <tr><td>評価</td><td>コメント</td></tr>
    <% @reviews.each do |review| %>
      <tr><td><%= review.evaluation %></td><td><%= review.thoughts %></td></tr>
    <% end %>
    </table>
  </div>
</div>