<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table>
    <tr>
      <td>名前</td>
      <td><%= f.label :"(姓)" %></td><td><%= f.text_field :last_name %></td>
      <td><%= f.label :"(名)" %></td><td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.label :"(セイ)" %></td><td><%= f.text_field :last_name_kana %></td>
      <td><%= f.label :"(メイ)" %></td><td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td><%= f.label :メールアドレス %></td><td></td><td><%= f.text_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <td><%= f.label :パスワード %>
      <% if @minimum_password_length %>
      (<%= @minium_password_length %> 文字以上)
      <% end %>
      </td>
      <td></td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr><td><%= f.label :"パスワード(確認用)" %></td><td></td><td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td></tr>
  </table>
  <%= f.submit "新規登録", class: 'btn btn-success' %>
<% end %>

<h5>既に登録済みの方</h5>
<p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>