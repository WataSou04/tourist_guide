<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">ログイン</h5>
      <div class="form-body p-4">
        <% if @customer.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @customer.errors.count %>件のエラーが発生しました。
            </h6>
            <%= @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        
        <%= form_with model: @customer, url: customer_session_path do |f| %>
          <div class="input-group mb-3 mt-4">
            <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
          </div>
          <hr>
          <%= f.submit "ログイン", class: 'btn btn-lg btn-block btn-success my-4' %>
        <% end %>
        <%= link_to "ゲストログイン", customers_guest_sign_in_path, class: 'btn btn-lg btn-block btn-secondary sign_in', method: :post %>
        <hr>
        <div class="mt-4">
          <h5>会員登録がお済みでない方</h5>
          <p><%= link_to "こちら", new_customer_registration_path %> からご登録ください。</p>
        </div>
      </div>
    </div>
  </div>
</div>